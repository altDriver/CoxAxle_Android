<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="5dp"
    android:paddingRight="5dp">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="245dp"
        android:background="@mipmap/backgroud"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/my_car_image"
            android:layout_width="300dp"
            android:layout_height="175dp"
            android:layout_gravity="center"
            android:src="@mipmap/car_img" />

        <TextView
            android:id="@+id/my_car_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Audi A4 2.0T Premium"
            android:textColor="@color/home_screen_title_text_color"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/my_car_next_service_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_gravity="center"
            android:text="Next service : Aug 27, 2016"
            android:textSize="13sp" />


    </LinearLayout>
</RelativeLayout>