<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="305dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/list_row_selector"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/dealer_inventory_list_image"
            android:layout_width="match_parent"
            android:layout_height="223dp"
            android:layout_gravity="center"
            android:src="@mipmap/car_img" />

        <TextView
            android:id="@+id/dealer_inventory_list_name"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="left"
            android:textStyle="bold"
            android:paddingLeft="20dp"
            android:layout_marginTop="15dp"
            android:text="2010 Audi A3 2.0T"
            android:textColor="@color/home_screen_title_text_color"
            android:textSize="17sp"
            android:layout_below="@+id/dealer_inventory_list_image"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/dealer_inventory_list_miles"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="left"
            android:paddingLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="3,745 Miles"
            android:textSize="13sp"
            android:layout_below="@+id/dealer_inventory_list_name"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="$ 15,999"
            android:textColor="@color/colorPumpkin"
            android:textSize="17sp"
            android:textStyle="bold"
            android:paddingRight="10dp"
            android:id="@+id/dealer_inventory_list_doller"
            android:layout_gravity="right"
            android:layout_below="@+id/dealer_inventory_list_name"
            android:layout_alignParentEnd="true" />
<RelativeLayout
    android:id="@+id/dealer_inventory_list_showtext_layout"
    android:layout_width="50dp"
    android:layout_height="30dp"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="15dp"
    android:background="@drawable/list_row_selector2">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="USED"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:id="@+id/dealer_inventory_list_showtext"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />
</RelativeLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/dealer_inventory_list_wish_image"
            android:src="@mipmap/wish_icon"
            android:layout_alignTop="@+id/dealer_inventory_list_showtext_layout"
            android:layout_marginRight="10dp"
            android:layout_alignStart="@+id/dealer_inventory_list_doller" />
    </RelativeLayout>
</RelativeLayout>