<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background_img"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".presentation.RegisterUserActivity">

    <ScrollView
        android:id="@+id/register_user_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/user_register_form"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <AutoCompleteTextView
                        android:id="@+id/user_firstname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/colorWhite"
                        android:hint="@string/first_name"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:maxLines="1"
                        android:paddingLeft="10dp"
                        android:singleLine="true"
                        android:textColorHint="@color/colorWhite" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <AutoCompleteTextView
                        android:id="@+id/user_lastname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/colorWhite"
                        android:hint="@string/last_name"
                        android:imeOptions="actionNext"
                        android:inputType="text"
                        android:maxLines="1"
                        android:paddingLeft="10dp"
                        android:singleLine="true"
                        android:textColorHint="@color/colorWhite" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <AutoCompleteTextView
                        android:id="@+id/user_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/colorWhite"
                        android:hint="@string/password"
                        android:imeOptions="actionNext"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:paddingLeft="10dp"
                        android:singleLine="true"
                        android:textColorHint="@color/colorWhite" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <AutoCompleteTextView
                        android:id="@+id/user_email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/colorWhite"
                        android:hint="@string/email_address"
                        android:imeOptions="actionNext"
                        android:inputType="textEmailAddress"
                        android:maxLines="1"
                        android:paddingLeft="10dp"
                        android:singleLine="true"
                        android:textColorHint="@color/colorWhite" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <AutoCompleteTextView
                        android:id="@+id/user_phonenumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/colorWhite"
                        android:hint="@string/phone_number"
                        android:inputType="phone"
                        android:imeOptions="actionNext"
                        android:maxLines="1"
                        android:paddingLeft="10dp"
                        android:singleLine="true"
                        android:textColorHint="@color/colorWhite" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <AutoCompleteTextView
                        android:id="@+id/user_zipcode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/colorWhite"
                        android:hint="@string/zip_code"
                        android:inputType="number"
                        android:imeOptions="actionNext"
                        android:maxLines="1"
                        android:paddingLeft="10dp"
                        android:singleLine="true"
                        android:textColorHint="@color/colorWhite" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <AutoCompleteTextView
                        android:id="@+id/user_vehicle_vin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/colorWhite"
                        android:hint="@string/vehicle_vin"
                        android:inputType="textAutoComplete"
                        android:imeOptions="actionNext"
                        android:maxLines="1"
                        android:paddingLeft="10dp"
                        android:singleLine="true"
                        android:textColorHint="@color/colorWhite" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <AutoCompleteTextView
                        android:id="@+id/user_vehicle_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/colorWhite"
                        android:hint="@string/vehicle_type"
                        android:inputType="textAutoComplete"
                        android:imeOptions="actionNext"
                        android:maxLines="1"
                        android:paddingLeft="10dp"
                        android:singleLine="true"
                        android:textColorHint="@color/colorWhite" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <AutoCompleteTextView
                        android:id="@+id/user_vehicle_make"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/colorWhite"
                        android:hint="@string/vehicle_make"
                        android:inputType="textAutoComplete"
                        android:imeOptions="actionNext"
                        android:maxLines="1"
                        android:paddingLeft="10dp"
                        android:singleLine="true"
                        android:textColorHint="@color/colorWhite" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <AutoCompleteTextView
                        android:id="@+id/user_vehicle_model"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/colorWhite"
                        android:hint="@string/vehicle_model"
                        android:inputType="textAutoComplete"
                        android:imeOptions="actionNext"
                        android:maxLines="1"
                        android:paddingLeft="10dp"
                        android:singleLine="true"
                        android:textColorHint="@color/colorWhite" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <AutoCompleteTextView
                        android:id="@+id/user_vehicle_year"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/colorWhite"
                        android:hint="@string/vehicle_year"
                        android:inputType="number"
                        android:imeOptions="actionNext"
                        android:maxLines="1"
                        android:paddingLeft="10dp"
                        android:singleLine="true"
                        android:textColorHint="@color/colorWhite" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <AutoCompleteTextView
                        android:id="@+id/user_vehicle_color"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/colorWhite"
                        android:hint="@string/vehicle_color"
                        android:inputType="textAutoComplete"
                        android:imeOptions="actionNext"
                        android:maxLines="1"
                        android:paddingLeft="10dp"
                        android:singleLine="true"
                        android:textColorHint="@color/colorWhite" />

                </android.support.design.widget.TextInputLayout>
            <RelativeLayout
                android:id="@+id/user_vehicle_photo1_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/user_vehicle_imagebutton1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/vehicle_photo1"
                    android:layout_marginTop="20dp"
                    android:layout_alignParentStart="true" />
                <ImageView
                    android:id="@+id/user_vehicle_image1"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/honda_logo" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/user_vehicle_photo2_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/user_vehicle_photo1_edit">
                <Button
                    android:id="@+id/user_vehicle_imagebutton2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/vehicle_photo2"
                    android:layout_marginTop="20dp"
                    android:layout_alignParentStart="true" />
                <ImageView
                    android:id="@+id/user_vehicle_image2"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:paddingTop="5dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/honda_logo" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/user_vehicle_photo3_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/user_vehicle_photo2_edit">
                <Button
                    android:id="@+id/user_vehicle_imagebutton3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/vehicle_photo3"
                    android:layout_marginTop="20dp"
                    android:layout_alignParentStart="true" />
                <ImageView
                    android:id="@+id/user_vehicle_image3"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:paddingTop="5dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/honda_logo" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/user_vehicle_warrenty_from_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/user_vehicle_photo3_edit">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <AutoCompleteTextView
                        android:id="@+id/user_vehicle_warrentyfrom"
                        android:layout_width="270dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/colorWhite"
                        android:imeOptions="actionNext"
                        android:hint="@string/vehicle_warrenty_from"
                        android:inputType="date"
                        android:maxLines="1"
                        android:paddingLeft="10dp"
                        android:singleLine="true"
                        android:textColorHint="@color/colorWhite" />

                </android.support.design.widget.TextInputLayout>

                <ImageView
                    android:id="@+id/user_warrenty_from_calender_pic"
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="5dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/calender_temp" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/user_vehicle_warrenty_to_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/user_vehicle_warrenty_from_edit">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <AutoCompleteTextView
                        android:id="@+id/user_vehicle_warrentyto"
                        android:layout_width="270dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/colorWhite"
                        android:hint="@string/vehicle_warrenty_to"
                        android:inputType="date"
                        android:imeOptions="actionNext"
                        android:maxLines="1"
                        android:paddingLeft="10dp"
                        android:singleLine="true"
                        android:textColorHint="@color/colorWhite" />

                </android.support.design.widget.TextInputLayout>

                <ImageView
                    android:id="@+id/user_warrenty_to_calender_pic"
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="5dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/calender_temp" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/user_vehicle_extended_warrenty_from_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/user_vehicle_warrenty_to_edit">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <AutoCompleteTextView
                        android:id="@+id/user_vehicle_extended_warrentyfrom"
                        android:layout_width="270dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/colorWhite"
                        android:hint="@string/vehicle_extended_warrenty_from"
                        android:inputType="date"
                        android:imeOptions="actionNext"
                        android:maxLines="1"
                        android:paddingLeft="10dp"
                        android:singleLine="true"
                        android:textColorHint="@color/colorWhite" />

                </android.support.design.widget.TextInputLayout>

                <ImageView
                    android:id="@+id/user_extended_warrenty_from_calender_pic"
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="5dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/calender_temp" />

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/user_vehicle_extended_warrenty_to_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/user_vehicle_extended_warrenty_from_edit">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <AutoCompleteTextView
                        android:id="@+id/user_vehicle_extended_warrentyto"
                        android:layout_width="270dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/colorWhite"
                        android:hint="@string/vehicle_extended_warrenty_to"
                        android:inputType="date"
                        android:imeOptions="actionNext"
                        android:maxLines="1"
                        android:paddingLeft="10dp"
                        android:singleLine="true"
                        android:textColorHint="@color/colorWhite" />

                </android.support.design.widget.TextInputLayout>

                <ImageView
                    android:id="@+id/user_extended_warrenty_to_calender_pic"
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="5dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/calender_temp" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/user_vehicle_manual_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/user_vehicle_extended_warrenty_to_edit">
                <Button
                    android:id="@+id/user_manual_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/vehicle_manual"
                    android:layout_marginTop="20dp"
                    android:layout_alignParentStart="true" />
                <ImageView
                    android:id="@+id/user_manual_img"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/honda_logo" />
            </RelativeLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <AutoCompleteTextView
                    android:id="@+id/user_vehicle_loanamount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorWhite"
                    android:hint="@string/vehicle_loan_amount"
                    android:inputType="number"
                    android:imeOptions="actionNext"
                    android:maxLines="1"
                    android:paddingLeft="10dp"
                    android:singleLine="true"
                    android:textColorHint="@color/colorWhite" />

            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <AutoCompleteTextView
                    android:id="@+id/user_vehicle_emi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorWhite"
                    android:hint="@string/vehicle_emi"
                    android:inputType="textAutoComplete"
                    android:imeOptions="actionNext"
                    android:maxLines="1"
                    android:paddingLeft="10dp"
                    android:singleLine="true"
                    android:textColorHint="@color/colorWhite" />

            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <AutoCompleteTextView
                    android:id="@+id/user_vehicle_interest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorWhite"
                    android:hint="@string/vehicle_interest"
                    android:inputType="number"
                    android:imeOptions="actionNext"
                    android:maxLines="1"
                    android:paddingLeft="10dp"
                    android:singleLine="true"
                    android:textColorHint="@color/colorWhite" />

            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <AutoCompleteTextView
                    android:id="@+id/user_vehicle_loantenure"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorWhite"
                    android:hint="@string/vehicle_loan_tenure"
                    android:inputType="textAutoComplete"
                    android:imeOptions="actionNext"
                    android:maxLines="1"
                    android:paddingLeft="10dp"
                    android:singleLine="true"
                    android:textColorHint="@color/colorWhite" />

            </android.support.design.widget.TextInputLayout>
            <RelativeLayout
                android:id="@+id/user_vehicle_insurance_document_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/user_insurence_document"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/vehicle_insurance_document"
                    android:layout_marginTop="20dp"
                    android:layout_alignParentStart="true" />
                <ImageView
                    android:id="@+id/user_insurence_img"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/honda_logo" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/user_vehicle_renewal_date_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/user_vehicle_insurance_document_edit">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <AutoCompleteTextView
                        android:id="@+id/user_vehicle_renewal_date"
                        android:layout_width="270dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/colorWhite"
                        android:hint="@string/vehicle_tag_renewal_date"
                        android:inputType="date"
                        android:imeOptions="actionNext"
                        android:maxLines="1"
                        android:paddingLeft="10dp"
                        android:singleLine="true"
                        android:textColorHint="@color/colorWhite" />

                </android.support.design.widget.TextInputLayout>

                <ImageView
                    android:id="@+id/user_renewal_date_img"
                    android:layout_width="80dp"
                    android:layout_height="60dp"
                    android:layout_marginTop="5dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/calender_temp" />
            </RelativeLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <AutoCompleteTextView
                    android:id="@+id/user_vehicle_trim"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorWhite"
                    android:hint="@string/vehicle_trim"
                    android:inputType="textAutoComplete"
                    android:imeOptions="actionNext"
                    android:maxLines="1"
                    android:paddingLeft="10dp"
                    android:singleLine="true"
                    android:textColorHint="@color/colorWhite" />

            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <AutoCompleteTextView
                    android:id="@+id/user_vehicle_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorWhite"
                    android:hint="@string/vehicle_style"
                    android:inputType="textAutoComplete"
                    android:imeOptions="actionNext"
                    android:maxLines="1"
                    android:paddingLeft="10dp"
                    android:singleLine="true"
                    android:textColorHint="@color/colorWhite" />

            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <AutoCompleteTextView
                    android:id="@+id/user_vehicle_mileage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorWhite"
                    android:hint="@string/vehicle_mileage"
                    android:inputType="textAutoComplete"
                    android:imeOptions="actionNext"
                    android:maxLines="1"
                    android:paddingLeft="10dp"
                    android:singleLine="true"
                    android:textColorHint="@color/colorWhite" />

            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <AutoCompleteTextView
                    android:id="@+id/user_vehicle_ownership_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorWhite"
                    android:hint="@string/vehicle_ownership_type"
                    android:inputType="textAutoComplete"
                    android:imeOptions="actionNext"
                    android:maxLines="1"
                    android:paddingLeft="10dp"
                    android:singleLine="true"
                    android:textColorHint="@color/colorWhite" />

            </android.support.design.widget.TextInputLayout>
            <Button
                android:id="@+id/usersign_up_button"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="#bd2026"
                android:text="@string/action_sign_up"
                android:textColor="@color/colorWhite"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
