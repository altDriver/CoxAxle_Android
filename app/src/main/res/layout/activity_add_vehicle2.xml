<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/colorTextDark"
        android:layout_height="80dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            android:text="@string/vehicle_insurance_details" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Vehicle_done2of4_tv"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:textSize="17sp"
            android:textColor="@color/colorWhite"
            android:text="@string/vehicle_done" />

    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:src="@mipmap/progressbar2of4"
        android:id="@+id/imageView_ProgressBar2of4" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            style="@style/CustomFontStyle"
            android:text="@string/vehicle_insurance_expiration_date" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="20dp"
            style="@style/CustomFontStyle"
            android:textStyle="bold"
            android:gravity="right"
            android:background="@android:color/transparent"
            android:hint="@string/vehicle_selectinsuranceexpdate"
            android:id="@+id/AddVehicle_InsuranceExpiration_et"
            android:layout_weight="2" />

    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_marginTop="20dp"
        android:layout_height="1dp"
        android:background="#E4EAEE" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            style="@style/CustomFontStyle"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="@string/vehicle_insurance_card" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@mipmap/adddocumenticon"
            android:layout_marginRight="20dp"
            android:id="@+id/AddVehicle_AddInsurancePhoto_iv" />
        </RelativeLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_marginTop="20dp"
        android:layout_height="1dp"
        android:background="#E4EAEE" />



</LinearLayout>