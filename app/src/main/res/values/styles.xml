<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="android:textColorHint">@color/colorWhite</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="Theme.AppCompat.Light.NoActionBar.FullScreen" parent="@style/Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="CoxAxleTheme" parent="android:Theme.Light">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/colorBg</item>
    </style>
    <!-- Add vehicle styles -->
    <style name="CustomFontStyle">
        <item name="android:textSize">17sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/colorTextDark</item>/>
    </style>

    <style name="CarShoppingFontStyleSize20">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/colorTextDark</item>/>
        <item name="android:background">@color/colorWhite</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">70dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_width">match_parent</item>

    </style>

    <style name="CarShoppingFontStyleSize16">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorTextLight</item>/>
        <item name="android:background">@color/colorWhite</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">100dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">match_parent</item>

    </style>

    <style name="editTextStyle">
        <item name="android:background">@color/colorWhite</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">17dp</item>
        <item name="android:textColor">@color/colorTextLight</item>

    </style>

    <style name="searchFiltersFontStyleSize20">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorTextDark</item>/>
        <item name="android:background">@color/colorWhite</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">23dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">match_parent</item>

    </style>

    <style name="searchFiltersSelectedFontStyleSize20">
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorTextLight</item>/>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">match_parent</item>

    </style>


    <style name="addVehicleCompleteScreenFontStyleSize17">
        <item name="android:textSize">17sp</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:paddingLeft">21dp</item>
        <item name="android:background">@color/colorWhite</item>
        <item name="android:textColor">@color/colorTextLight</item>/>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_width">match_parent</item>

    </style>

    <style name="addVehicleCompleteScreenEditTextStyleSize17">
        <item name="android:textSize">17sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingLeft">170dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:paddingRight">21dp</item>
        <item name="android:background">@color/color_transparent</item>
        <item name="android:textColor">@color/colorTextLight</item>/>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_width">wrap_content</item>

    </style>


    <style name="CarShoppingFontStyleSize21">
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/colorTextDark</item>/>
        <item name="android:background">@color/colorWhite</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="settingsScreenEditTextStyleSize17">
        <item name="android:textSize">17sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingLeft">170dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:paddingRight">21dp</item>
        <item name="android:background">@color/color_transparent</item>
        <item name="android:textColor">@color/colorTextLight</item>/>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_width">wrap_content</item>

    </style>


</resources>
